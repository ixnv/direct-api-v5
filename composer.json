{
    "name": "elama-dev/direct-api-v5",
    "description": "Elama Yandex Direct APIv5 Wrapper",
    "autoload": {
        "psr-4": { "eLama\\DirectApiV5\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {
            "eLama\\DirectApiV5\\Test\\": "tests/"
        },
        "files": [
            "vendor/hamcrest/hamcrest-php/hamcrest/Hamcrest.php"
        ]
    },
    "require": {
        "php": "^7.2",
        "guzzlehttp/guzzle": ">=5.2",
        "guzzlehttp/promises": "1.*",
        "psr/log": "*",
        "beberlei/assert": "2.*",
        "jms/serializer": "~3.0",
        "monolog/monolog": ">=1.12",
        "phpoption/phpoption": ">=1.1.0"
    },
    "require-dev": {
        "elama/php-codesniffer-rules": "^1.0",
        "phpunit/phpunit": "~5.7",
        "squizlabs/php_codesniffer": "2.7.0",
        "hamcrest/hamcrest-php": "~2.0.0",
        "phake/phake": "~2.2.1"
    },

    "config": {
        "bin-dir": "bin"
    },

    "suggest": {
        "elama/common-api": "Не то что бы советую ставить, но есть адаптер для получения токенов используя ExternalSystemAccount"
    },

    "repositories": [
        {
            "type": "git",
            "url": "git@github.com:eLama/php-codesniffer-rules.git"
        }
    ]
}
